<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.editpreferences.EditPreferencesFragment">

    <TextView
        android:id="@+id/text_edit_preferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Preferencias"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_edit_preferences">

        <CheckBox
            android:id="@+id/checkbox_rural"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rural" />

        <CheckBox
            android:id="@+id/checkbox_playa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playa" />

        <CheckBox
            android:id="@+id/checkbox_bares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bares y restauración" />

        <CheckBox
            android:id="@+id/checkbox_monumento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monumento Histórico" />

        <CheckBox
            android:id="@+id/checkbox_religioso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Religioso" />

        <CheckBox
            android:id="@+id/checkbox_museos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Museos" />

        <CheckBox
            android:id="@+id/checkbox_servicios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servicios" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>